<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:backgroundTint="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="@dimen/_245sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_gravity="center_vertical"
        android:background="@color/colorAccent"
        android:gravity="center_vertical">


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:maxLines="1"
            android:text="About"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_email"
        android:layout_width="@dimen/_245sdp"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/_65sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginBottom="@dimen/_25sdp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_75sdp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/babynews"
            android:text="Ok"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/tv_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/_2sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="BabyNews - Short news online"
            android:gravity="center_horizontal|center_vertical"
            android:textStyle="bold"
            android:lines="1"
            android:textSize="@dimen/_12sdp"/>

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/_2sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="App Version : 1.1"
            android:gravity="center_horizontal|center_vertical"
            android:lines="1"
            android:textSize="@dimen/_12sdp"/>

        <TextView
            android:id="@+id/tv_help_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="&#169; Copyright 2020 - originprogrammers.in"
            android:gravity="center_horizontal|center_vertical"
            android:autoLink="web|email"
            android:lines="2"
            android:textSize="@dimen/_12sdp"/>


    </LinearLayout>

</LinearLayout>